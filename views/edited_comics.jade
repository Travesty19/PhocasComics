block content
    head
        link(rel='stylesheet', href='/stylesheets/style-page.css')
        link(rel='stylesheet', href='/stylesheets/rating.css')
        link(rel='stylesheet', href='/stylesheets/font-awesome.css')
        script(src='/javascript/rating.js')
        script(src='/javascript/rating_title.js')
        title Phocas Star Rating

    body
        nav.o-home-nav
            a.o-home-nav__link(href='/')
                //i.fa.fa-arrow-left
                .fa-1x Home 

        nav.o-home-nav
            if(loggedin === 1)
                a.o-home-nav__link(href='/edit_comic')
                    //i.fa.fa-arrow-left
                    .fa-1x Create
            else
                a.o-home-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Create

        nav.o-header-nav
            if(loggedin === 1)
                a.o-header-nav__link(href='/manage_comics')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage
            else
                a.o-header-nav__link(href='/login')
                    //i.fa.fa-arrow-left
                    .fa-1x Manage

            form#form
                input#search-input(type='text', placeholder='Find a Comic', autocomplete = "off")
                #button-holder
                    img(src='/images/mag.png')

            if(loggedin === 1)
                p.fa-xx Welcome,
                .fa-2x #{user_name}
                a.o-header-nav__link(href='/logout')
                    .fa-1x Log out
                    //i.fa.fa-star
            else
                a.o-header-nav__link(href='/login')
                    .fa-1x Log in
                    //i.fa.fa-star

        header.o-header
            .o-container
                a(href='/')
                    h1.o-header__title Phocas

        subheader.o-subheader
            .o-container
                a(href='/manage_comics/')
                    h1.o-subheader__title Created Comics
        
        subheader.o-subheader
            .o-container
                a(href='/edited_comics')
                    h1.o-subheader__title Edited Comics

        main
            if (indicator === 1)
                p.fa-1x.blocktext No result for '#{userInput}'...
                p.fa-1x.blocktext Back to #[a(href='/') All Comics]

        main.o-content
            .o-container
                div.div#pagination
                div.div#content
                    #shop


        if (indicator === 0)
            footer.o-footer
                .o-container
